# Neon Database
# VITE_ prefix = frontend only, no prefix = backend only
NEON_DATABASE_URL=postgresql://user:password@host/neondb?sslmode=require

# Neon Auth (for Google/GitHub login)
# Frontend uses full URL with /neondb/auth for the SDK
VITE_NEON_AUTH_URL=https://your-endpoint.neonauth.region.aws.neon.tech/neondb/auth
# Backend uses base URL only (without /neondb/auth) for API validation
NEON_AUTH_URL=https://your-endpoint.neonauth.region.aws.neon.tech

# Google OAuth (for YouTube API - separate from Neon Auth)
VITE_GOOGLE_CLIENT_ID=your-client-id.apps.googleusercontent.com

# Last.fm API (for genre/mood enrichment)
# Get your API key from https://www.last.fm/api/account/create
LASTFM_API_KEY=

# YouTube Data API (for video search/validation)
# Get your API key from https://console.cloud.google.com
YOUTUBE_API_KEY=

# Web Push (VAPID keys for browser notifications)
# Generate with: npx web-push generate-vapid-keys
VITE_VAPID_PUBLIC_KEY=
VAPID_PUBLIC_KEY=
VAPID_PRIVATE_KEY=
VAPID_EMAIL=mailto:admin@yourdomain.com

# Allowed origins for auth proxy (comma-separated, production domains)
# Dev origins (localhost:5173, localhost:8888) are always included
ALLOWED_ORIGINS=https://tunecraft.com,https://your-site.netlify.app

# Resend (email notifications)
# Get your API key from https://resend.com
RESEND_API_KEY=
RESEND_FROM_EMAIL=notifications@yourdomain.com
